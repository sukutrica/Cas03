SELECT KNJIGA_ID,NAZIV,AUTOR_ID
FROM KNJIGA 

SELECT NAZIV
FROM AUTOR

SELECT AU.NAZIV
FROM AUTOR AU, KNJIGA KNJ
WHERE KNJ.NAZIV='ORLOVI RANO LETE' AND AU.AUTOR_ID=KNJ.AUTOR_ID

SELECT KNJ.NAZIV
FROM AUTOR AU, KNJIGA KNJ
WHERE AU.NAZIV = 'IVO ANDRIC' AND AU.AUTOR_ID = KNJ.AUTOR_ID






DROP TABLE AUTOR
DROP TABLE KNJIGA

SELECT * FROM AUTOR

