CREATE TABLE AUTOR(
	AUTOR_ID INTEGER PRIMARY KEY NOT NULL,
	NAZIV VARCHAR (40) NOT NULL)

DROP TABLE AUTOR

INSERT INTO AUTOR VALUES (1,'BRANKO COPIC');
